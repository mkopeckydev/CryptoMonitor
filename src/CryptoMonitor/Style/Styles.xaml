<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Label" x:Key="PriceLabel">
        <Setter Property="Margin" Value="1,1,3,1" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="WhiteSmoke" />
    </Style>
    <Style TargetType="Image" x:Key="ChartImage">
        <Setter Property="Margin" Value="1,5,1,5" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Stretch" Value="Fill" />
    </Style>
    <Style TargetType="Button" x:Key="ImageButton">
        <Setter Property="Margin" Value="3,3,3,3" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style TargetType="Border" x:Key="AppBorder">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Background" Value="#404040" />
        <Setter Property="Padding" Value="4,4,4,4" />
    </Style>

    

</ResourceDictionary>